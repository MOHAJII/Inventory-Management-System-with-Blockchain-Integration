<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="container" stylesheets="@style1.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inventoryManagement.viewController.ProductsPageController">
   <children>
      <BorderPane layoutX="-7.0" prefHeight="400.0" prefWidth="607.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <HBox alignment="CENTER" prefHeight="49.0" prefWidth="607.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="TOP_RIGHT" prefHeight="49.0" prefWidth="170.0" text="Items Page" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Cantarell Regular" size="30.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="searchItemField" promptText="Search for item">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <TableView fx:id="productTable" prefHeight="265.0" prefWidth="607.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="nameCol" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="descriptionCol" prefWidth="139.0" text="Description" />
                  <TableColumn fx:id="wholesaleCol" prefWidth="130.0" text="WholeSale Price" />
                  <TableColumn fx:id="priceCol" prefWidth="61.0" text="Price" />
                  <TableColumn fx:id="categorieCol" prefWidth="77.0" text="Category" />
                  <TableColumn fx:id="upccodeCol" prefWidth="84.0" text="UPC Code" />
              </columns>
               <BorderPane.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </BorderPane.margin>
            </TableView>
         </center>
         <bottom>
            <HBox alignment="CENTER_RIGHT" prefHeight="61.0" prefWidth="587.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="addBtn" mnemonicParsing="false" onAction="#showAddProductForm" text="Add" />
                  <Button fx:id="modifyBtn" mnemonicParsing="false" text="Modify" />
               </children>
               <BorderPane.margin>
                  <Insets right="20.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
